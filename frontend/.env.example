# API配置
EXPO_PUBLIC_API_BASE_URL=http://localhost:3000/api/v1
EXPO_PUBLIC_API_TIMEOUT=10000

# Firebase配置（推送通知）
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
EXPO_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id

# 应用配置
EXPO_PUBLIC_APP_NAME=HydrationTracker
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_APP_BUILD_NUMBER=1

# 功能开关
EXPO_PUBLIC_ENABLE_ANALYTICS=true
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=true
EXPO_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# 开发配置
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_LOG_LEVEL=info

# 地理位置配置
EXPO_PUBLIC_LOCATION_ACCURACY=high
EXPO_PUBLIC_LOCATION_TIMEOUT=10000

# 通知配置
EXPO_PUBLIC_DEFAULT_NOTIFICATION_SOUND=default
EXPO_PUBLIC_NOTIFICATION_ICON=notification_icon

# 社交登录配置（可选）
EXPO_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id
EXPO_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id
EXPO_PUBLIC_APPLE_CLIENT_ID=your_apple_client_id

# 第三方服务配置
EXPO_PUBLIC_SENTRY_DSN=your_sentry_dsn
EXPO_PUBLIC_AMPLITUDE_API_KEY=your_amplitude_api_key

# 存储配置
EXPO_PUBLIC_STORAGE_KEY_PREFIX=hydration_tracker_
EXPO_PUBLIC_SECURE_STORAGE_SERVICE=hydration_tracker